  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/dist/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": { "NODE_ENV": "production" }
    },


    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "type": "node",
      "request": "attach",
      // "cw"
      "restart": true,
      "name": "Attach",
      "port": 5858,
      "internalConsoleOptions": "neverOpen",
      // "env"
    },
    // {
